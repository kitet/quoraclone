<nav class="navbar navbar-default" role="navigation">
    <div class="container-fluid">
        <!-- logo -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar1">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/">Quora Clone</a>
        </div>
        <!-- menu -->
        <div class="collapse navbar-collapse" id="navbar1">
            <ul class="nav navbar-nav">
                <li><a href="/">Home</a></li>
                <li><a href="/about">About</a></li>
                <li><a href="/contact">Contact</a></li>
            </ul>
        </div>
        <div id="session" class="collapse navbar-collapse navbar-right" id='navbar1'>
          {{#if session.isAuthenticated}}
            Logged in as {{session.currentUser.email}}
            <button class='btn btn-danger' {{action "signOut"}}>Sign out</button>
          {{else}}
            <button id='btn' class='btn btn-success' {{action "signIn"}}>Sign In</button>
            <button id='btn' class='btn' {{action "registerNewUser"}}>Register</button>
          {{/if}}
        </div>
    </div>
</nav>
